# Database Configuration
db.username=your_mysql_username
db.password=your_mysql_password

# JWT Secret Key (최소 256비트 이상)
jwt.secret=your-secret-key-at-least-256-bits-long-for-hs256-algorithm

# Google OAuth2 Configuration
google.client-id=your-google-client-id
google.client-secret=your-google-client-secret
google.redirect-uri=http://localhost:8080/login/oauth2/code/google

# File Upload Configuration
# 로컬 개발 환경 예시 (Windows)
app.upload.root=C:/rapid/uploads
# 로컬 개발 환경 예시 (Mac/Linux)
# app.upload.root=/Users/yourname/rapid/uploads
# 배포 서버 환경 예시 (Linux)
# app.upload.root=/home/ubuntu/rapid/uploads
